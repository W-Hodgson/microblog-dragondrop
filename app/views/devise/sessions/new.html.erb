<h2 class="text-xl font-bold mb-2">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "p-2 bg-white mb-2", data: { turbo: false } }) do |f| %>
  <div class="pb-2">
    <div class="flex flex-col">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded border-gray-300" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "current-password", class: "rounded border-gray-300" %>
    </div>
  </div>
  <div class="border-t border-gray-100 p-2 flex">
    <%= f.submit "Log in", class: "bg-black text-white py-2 px-4 rounded ml-auto" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
